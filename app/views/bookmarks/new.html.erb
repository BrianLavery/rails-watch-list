<%= render '/components/list_banner', list: @list %>

<div class="container">
  <div class="row">
    <div class="col my-4 mx-auto">
      <h1>Add a new movie to <%= @list.name %> list</h1>
    </div>
  </div>
  <div class="row">
    <div class="col mx-auto">
      <%= simple_form_for [@list, @bookmark] do |f| %>
        <%= f.association :movie %>
        <%= f.input :comment %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col mx-auto mt-4">
      <%= link_to "Back to #{@list.name}", list_path(@list), class: "btn btn-sm btn-outline-secondary" %>
    </div>
  </div>

</div>
