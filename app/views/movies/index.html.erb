<%= render '/components/index_banner' %>

<div class="container mt-3 mb-5">
  <div class="row my-2">
    <div class="col my-4 mx-auto d-flex justify-content-between align-items-center">
      <h1>All movies</h1>
      <div>
        <%= link_to "Add a movie", new_movie_path, class: "btn btn-outline-secondary" %>
      </div>
    </div>
  </div>

  <div class="row">

    <div class="movies-container">
      <% @movies.each do |movie| %>
        <div class="card-info">
          <%= link_to movie_path(movie) do %>
            <% if movie.photo.attached? %>
              <%= cl_image_tag movie.photo.key, class: "poster-fit-div" %>
            <% else %>
              <img class="poster-fit-div" src="<%= movie.poster_url %>" alt="<%= movie.title %>">
            <% end %>
          <% end %>
          <div class="card-info-infos">
            <div>
              <h2 class="movie-title"><%= movie.title %></h2>
              <p><%= movie.overview %></p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>




