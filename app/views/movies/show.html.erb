<%= render '/components/movie_banner', movie: @movie %>

<div class="container mt-3 mb-5">

  <div class="row">
    <div class="col my-4 mx-auto d-flex justify-content-between align-items-center">
      <h1><%= @movie.title %></h1>
      <div>
        <% if @list %>
          <%= link_to "Back to #{@list.name}", list_path(@list), class: "btn btn-outline-secondary" %>
        <% else %>
          <%= link_to "Back to movies", movies_path, class: "btn btn-outline-secondary" %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="row">

    <div class="col-xs-12 col-md-6 py-4">
      <div class="card-info p-3">
        <% if @movie.photo.attached? %>
          <%= cl_image_tag @movie.photo.key, class: "poster-fit-div" %>
        <% else %>
          <img class="poster-fit-div" src="<%= @movie.poster_url %>" alt="<%= @movie.title %>">
        <% end %>
      </div>
    </div>

    <div class="col-xs-12 col-md-6 py-4">
      <div class="card-info p-3">
          <h2 class="movie-title"><%= @movie.title %></h2>
          <p><%= @movie.overview %></p>
          <p>
            <strong>Rating: </strong><%= @movie.rating %>
            <% @movie.rating.ceil.times do %>
            <i class="far fa-star text-gold"></i>
            <% end %>
          </p>
      </div>
    </div>
</div>
</div>
